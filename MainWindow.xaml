                             HorizontalContentAlignment="Center"
                             Text="{Binding Name, Mode=TwoWay}"
                             x:Name="txtName"
                             Grid.Row="0" FontFamily="/Completist;component/Font/#Quicksand"/>
                        <TextBox Background="Transparent"
