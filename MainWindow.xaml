                             Foreground="White"
                             FontSize="32"
                             FontWeight="DemiBold"
                             SelectionBrush="LightGreen"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Left"
                             Margin="10"
